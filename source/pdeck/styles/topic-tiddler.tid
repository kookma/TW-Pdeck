/* topic tiddler statistics */
.kk-pdeck-topic-stat {
  display: flex;
  flex-direction: column;
  float: right;
}
.kk-pdeck-topic-stat > span:first-child {
  font-weight:bold;
  margin-bottom: 2px;
}
.kk-pdeck-examlist{
	padding-left:8px
}

/* topics in the sidebar */
.kk-pdeck-question-count {
  cursor: help;
  font-size: 0.8em;
  margin-left: 0.3em;
  vertical-align: top;
}

